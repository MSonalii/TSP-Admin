<div class="container">
    <div class="row">
      <div class="col-md-9 personal-info">
        {{#if errorLogin}}
        <div class="alert alert-danger alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-coffee"></i>
          {{ errorLogin }}
        </div>
      {{/if}}
        <form class="form-horizontal" method="POST" role="form" id="addBooks" action="/company/addCompany">
          <div class="form-group">
            <label class="col-lg-4 control-label">Company Name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="companyName" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-4 control-label">Company Code:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="companyCode" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-4 control-label">User Name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="userName" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-4 control-label">Password:</label>
            <div class="col-lg-8">
              <input class="form-control" type="password" name="password" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4 control-label">Display Name:</label>
            <div class="col-md-8">
              <input class="form-control" type="text" value="" name="displayName">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-4 control-label">No of Subscription:</label>
            <div class="col-md-8">
              <input class="form-control" type="text" value="" name="noOfSubscription">
            </div>
          </div>
          <br>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" id="addBook" class="btn btn-primary" value="Create company">
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>